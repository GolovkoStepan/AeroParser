%html
  %head
    %title AeroParser
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1" }

    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body

    %div.d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.shadow-sm
      %h5.my-0.mr-md-auto.font-weight-normal AeroParser
      %nav.my-2.my-md-0.mr-md-3
        = link_to 'Компании', companies_path, class: current_page?(companies_path) || current_page?(root_path) ? "btn btn-primary" : "p-2 text-dark"
        = link_to 'Самолеты', aircrafts_path, class: current_page?(aircrafts_path) ? "btn btn-primary" : "p-2 text-dark"
        = link_to 'Города', cities_path, class: current_page?(cities_path) ? "btn btn-primary" : "p-2 text-dark"

    %div.wrapper
      %div.container
        %div.row
          = yield

  %footer.pt-2.my-md-4.pt-md-4.border-top
    %div.row
      %div.col-12.col-md
        %p.d-block.mb-2.text-center &copy; 2019
