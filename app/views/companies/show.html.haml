.container.mb-4
  .row
    .col-md-12
      %h2.text-center Компания "#{@company.name}"

.container
  .row
    .col-xs-6.col-sm-6.col-md-6.col-lg-6.mx-auto.mb-2
      %h4.text-center Самолеты
      %hr
      %ul.list-group
        - @company.aircrafts.each do |aircraft|
          %li.list-group.item
            = link_to aircraft.name, aircraft
    .col-xs-6.col-sm-6.col-md-6.col-lg-6.mx-auto.mb-2
      %h4.text-center Города
      %hr
      %ul.list-group
        - @company.cities.each do |city|
          %li.list-group.item
            = link_to city.name, city