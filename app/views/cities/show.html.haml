.container.mb-4
  .row
    .col-md-12
      %h2.text-center Город "#{@city.name}"

.container
  .row
    .col-xs-6.col-sm-6.col-md-6.col-lg-6.mx-auto.mb-2
      %h4.text-center Самолеты
      %hr
      %ul.list-group
        - @city.aircrafts.each do |aircraft|
          %li.list-group.item
            = link_to aircraft.name, aircraft
    .col-xs-6.col-sm-6.col-md-6.col-lg-6.mx-auto.mb-2
      %h4.text-center Компании
      %hr
      %ul.list-group
        - @city.companies.each do |company|
          %li.list-group.item
            = link_to company.name, company